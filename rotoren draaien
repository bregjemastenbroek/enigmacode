# maak hier de hele enigma machine in python :D
alfabet = "abcdefghijklmnopqrstuvwxyz"

#rotoren
rotorA = 'defghijklmnopqrstuvwxyzabc'
rotorB = 'rstuvwxyzabcdefghijklmnopq'
rotorC = 'lmnopqrstuvwxyzabcdefghijk'

#rotor draaien
def shift(tekst, amount):
  eersteDeel =  tekst[amount:26]
  tweedeDeel = tekst[0:amount]
  return eersteDeel + tweedeDeel
print(shift(alfabet,9))

# rotor draait + hij kiest een letter
def encrypt (letter):
  global rotorA
  idx = alfabet.index(letter)
  newLetter = rotorA[idx]
