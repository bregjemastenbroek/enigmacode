def Rotorinstellen():
  print("Bepaal de standen van de rotoren")
  for x in range(3):
    while True:
      print("Stand rotor {}:". format(x+1))
      try:
        rotoren.append([alfabet,int(input())])
        break
      except:
        print("Je kan alleen getallen invoeren!")

