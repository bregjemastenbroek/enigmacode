# rotor draait + hij kiest een letter
def encrypt (letter):
  global rotorA
  idx = alfabet.index(letter)
  newLetter = rotorA[idx]
  eersteDeel = rotorA [1:26]
  tweedeDeel = rotorA [0:1]
  rotorA = eersteDeel + tweedeDeel

  return newLetter

woord = ""
for letter in "julia" :
  woord = woord + encrypt(letter)

print (woord)
